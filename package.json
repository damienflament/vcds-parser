{
  "name": "vcds-parser",
  "private": true,
  "type": "module",
  "version": "0.1.0-dev",
  "description": "An application to parse your VCDS reports.",
  "keywords": [
    "vcds",
    "vag",
    "vag-com",
    "vagcom",
    "diagnostic"
  ],
  "author": {
    "name": "Damien Flament",
    "email": "damien.flament@gmx.com"
  },
  "license": "ISC",
  "scripts": {
    "dev": "vite --port 8080 --strictPort",
    "build": "vite build",
    "preview": "vite preview --port 8080 --strictPort",
    "lint": "standard | snazzy",
    "configure": "node scripts/configure.mjs",
    "version": "run configure && git add -A config.js",
    "generate-parser": "peggy -o generated/parser.js --format es resources/vcds.pegjs",
    "watch-parser": "run generate-parser --watch",
    "generate-validator": "ajv compile -o generated/validator.js -s resources/vcds.schema.json --all-errors --verbose --code-lines --code-esm"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bulma": "^1.0.0",
    "vanjs-core": "^1.5.0"
  },
  "devDependencies": {
    "ajv": "^8.13.0",
    "ajv-cli": "patch:ajv-cli@npm%3A5.0.0#~/.yarn/patches/ajv-cli-npm-5.0.0-e12d6f3c52.patch",
    "fs-extra": "^11.2.0",
    "klaw-sync": "^6.0.0",
    "peggy": "^4.0.2",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "vite": "^5.2.0",
    "vite-plugin-commonjs": "^0.10.1"
  },
  "standard": {
    "ignore": [
      "generated/",
      "dist/"
    ],
    "globals": [
      "FileReader"
    ]
  },
  "packageManager": "yarn@4.2.2"
}
