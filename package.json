{
  "name": "vcds-parser",
  "version": "0.1.0-dev",
  "description": "An application to parse your VCDS reports.",
  "keywords": [
    "vcds",
    "vag",
    "vag-com",
    "vagcom",
    "diagnostic"
  ],
  "author": {
    "name": "Damien Flament",
    "email": "damien.flament@gmx.com"
  },
  "license": "ISC",
  "browser": "public/index.html",
  "scripts": {
    "start": "caddy start",
    "stop": "caddy stop",
    "serve": "caddy run",
    "lint": "yarn standard | yarn snazzy",
    "configure": "yarn node scripts/configure.mjs",
    "version": "yarn configure && git add -A public/",
    "generate-parser": "yarn peggy -o public/generated/parser.js --format es resources/vcds.pegjs",
    "watch-parser": "yarn peggy -o public/generated/parser.js --format es resources/vcds.pegjs --watch",
    "generate-validator": "yarn node scripts/generate-validator.mjs",
    "watch-validator": "yarn node scripts/generate-validator.mjs --types --watch"
  },
  "devDependencies": {
    "ajv": "^8.13.0",
    "esbuild": "^0.21.1",
    "fs-extra": "^11.2.0",
    "json-schema-to-typescript-lite": "^14.0.1",
    "klaw-sync": "^6.0.0",
    "peggy": "^4.0.2",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0"
  },
  "standard": {
    "ignore": [
      "**/vendor/",
      "public/generated/",
      "**/*.d.ts"
    ],
    "globals": [
      "FileReader"
    ]
  },
  "packageManager": "yarn@4.2.2"
}
